<section class="project" class="page">
    <div class="bg-rocket first"></div>
    <div class="bg-rocket second"></div>

    <div class="container fluid">

        <div class="content">

            <div class="controls">
                {% if previousProject %}
                    <a id="previous-project" class="bt-control ajax" data-page="annex" href="{{ path('project_show', {id: previousProject.id}) }}">
                        {{ includeAsset('/bundles/nightdisplay/images/icons/i-arrow-right.svg') |raw }}
                    </a>
                {% else %}
                    <a id="previous-project" class="bt-control disabled" >
                        {{ includeAsset('/bundles/nightdisplay/images/icons/i-arrow-right.svg') |raw }}
                    </a>
                {% endif %}
                <a id="close-project" class="bt-control ajax" data-page="main" href="{{ path('main_main')}}" >
                    {{ includeAsset('/bundles/nightdisplay/images/icons/i-cross.svg') |raw }}
                </a>
                {% if nextProject %}
                    <a id="next-project" class="bt-control ajax" data-page="annex" href="{{ path('project_show', {id: nextProject.id}) }}">
                        {{ includeAsset('/bundles/nightdisplay/images/icons/i-arrow-right.svg') |raw }}
                    </a>
                    {% else %}
                    <a id="next-project" class="bt-control disabled" >
                        {{ includeAsset('/bundles/nightdisplay/images/icons/i-arrow-right.svg') |raw }}
                    </a>
                {% endif %}
            </div>

            <h1>{{ project.title }}</h1>
            <div class="picture">
                {% set image = util_image.getOrderedImages(project)|first %}
                <a class="wrapper">
                    <img src="{{ image.path }}" alt=""/>
                </a>
            </div>
            <div class="goals">
                <h2>Description</h2>
                <p>{{ project.description | raw }}</p>

            </div>
            <div class="technologies">
                <h2>Technologies</h2>
                <ul class="language-list">
                    {% for webtech in project.webTechnologies %}
                        <li>{{ includeAsset(webtech.getImageItem().getImage().getPath())|raw  }}</li>
                        {% set image = webtech.getImageItem().getImage() %}
                        <li><img src="{{image.getPath()}}" alt="{{image.getTitle()}}" title="{{image.getTitle()}}"/></li>
                    {% endfor %}
                </ul>
            </div>
            <div class="technical-points">
                <h2>Points techniques</h2>
                {{ project.technicalPoints | raw }}
            </div>
        </div>
    </div>
</section>
